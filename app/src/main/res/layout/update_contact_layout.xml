<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_contact_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#A74D4D"
    tools:context="com.tunex.myprivatecontact.UpdateContactActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/name_search"
        android:layout_marginTop="10dp"
        android:hint="Enter Name"/>

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name_search"
        android:layout_alignParentRight="true"
        android:text="Search"
        android:onClick="searchContact"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/title_text"
        android:gravity="center"
        android:layout_below="@+id/name_search"
        android:text="Update Contact"
        android:textAppearance="?android:textAppearanceLarge"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/new_name"
        android:layout_below="@+id/title_text"
        android:layout_marginTop="20dp"
        android:hint="Enter Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/new_mobile"
        android:layout_below="@+id/new_name"
        android:layout_marginTop="20dp"
        android:hint="Enter Mobile"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/new_email"
        android:layout_below="@+id/new_mobile"
        android:layout_marginTop="20dp"
        android:hint="Enter Email"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/update_button"
        android:text="Update Contact"
        android:onClick="updateContact"/>



</RelativeLayout>
